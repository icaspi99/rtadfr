vers <- packageVersion("rtadfr")
vers <- paste("R package version", vers)

citHeader("To cite the rtadfr package in publications, please use:")

bibentry(bibtype = "Manual",
  title = "{rtadfr}: Testing for bubbles with R",
  author = "Itamar Caspi",
  year = 2018,
  note = vers,
  url = "https://itamarcaspi.github.io/rtadfr/")
